import Foundation

struct PasswordValidator: BlankValidation, Validation {
    func validate(_ value: String) -> Bool {
        if blankValidation(string: value) {
            return false
        }
        
        let minPasswordLength = 6
        guard value.count >= minPasswordLength else {
            return false
        }

        let maxPasswordLength = 256
        guard value.count <= maxPasswordLength else {
            return false
        }
        
        return true
    }
}